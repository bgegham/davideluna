.row
    .col-xs-12.col-sm-8
        form#editForm(method="post", role='form', action="/control/admin/portfolio/edit/coverimg2/#{oldVal._id}", enctype="multipart/form-data")
            .col-xs-12
                .form-group
                    label.no-margin Project cover image:
                    .input-group
                        span.input-group-btn
                            span.btn.btn-default.btn-file.meta-image
                                | Browse&mldr;
                                input.inputFile(name="image_c",type='file', data-preview="metaImagePr", id="metaImagePath")
                        input.form-control(type='text', readonly='')
                    if errors && errors.shareImage
                        p.text-error= errors.shareImage
                    p.help-block Select image in (350 x 200) px size.
                    if(oldVal.coverImage)
                        img.img-upload(style="max-height: 350px;max-width:90%", src="/images/#{oldVal.coverImage}", id="metaImagePr")
                    else
                        img.img-upload(style="max-height: 350px;max-width:90%", src="/img/cpanel/pictureDefault.png", id="metaImagePr")
            .col-xs-12
                .clearfix
            .col-xs-12.text-center.top-25
                button.btn.btn-sm.btn-success(type="submit") Update cover image