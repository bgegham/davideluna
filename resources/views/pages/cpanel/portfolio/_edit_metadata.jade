.row
    form#editForm(method="post", role='form', action="/control/admin/portfolio/edit/metadata/#{oldVal._id}", enctype="multipart/form-data")
        .col-xs-12
            .form-group
                label(for='mkeywords') Keywords (meta)
                textarea#mkeywords.form-control(name="m_keywords", rows=4)=(oldVal && oldVal.meta_keywords) ? oldVal.meta_keywords : ''
        .col-xs-12
            .form-group
                label(for='mcontent') Project description (meta)
                textarea#mcontent.form-control(name="m_content", rows=4)=(oldVal && oldVal.meta_content) ? oldVal.meta_content : ''
        .clearfix
        hr
        .clearfix
        .col-xs-12
            .form-group
                label.no-margin Project share this image:
                .input-group
                    span.input-group-btn
                        span.btn.btn-default.btn-file.meta-image
                            | Browse&mldr;
                            input.inputFile(name="image_m",type='file', data-preview="metaImagePr", id="metaImagePath")
                    input.form-control(type='text', readonly='')
                if errors && errors.shareImage
                    p.text-error= errors.shareImage
                p.help-block Select image in (640 x 750) px size.
                if(oldVal.shareImage)
                    img.img-upload(style="height: 350px;", src="/images/#{oldVal.shareImage}", id="metaImagePr")
                else
                    img.img-upload(style="height: 350px;", src="/img/cpanel/pictureDefault.png", id="metaImagePr")
        .col-xs-12
            .clearfix
        .col-xs-12.text-center.top-25
            button.btn.btn-md.btn-success(type="submit") Update meta content